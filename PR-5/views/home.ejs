<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieHub - Stream Movies</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body>

    <%- include('header.ejs') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-background">
            <div class="hero-overlay"></div>
            <div class="hero-particles"></div>
        </div>
        <div class="hero-content">
            <div class="hero-badge">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="23 7 16 12 23 17 23 7"></polygon>
                    <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                </svg>
                <span>Stream Unlimited</span>
            </div>
            <h1>Welcome to MovieHub</h1>
            <p class="hero-subtitle">Discover, watch, and manage your favorite movies all in one place</p>
            <div class="hero-stats">
                <div class="hero-stat">
                    <div class="stat-number" id="movieCount"><%= movies.length %></div>
                    <div class="stat-label">Movies</div>
                </div>
                <div class="hero-stat">
                    <div class="stat-number">HD</div>
                    <div class="stat-label">Quality</div>
                </div>
                <div class="hero-stat">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Access</div>
                </div>
            </div>
            <div class="hero-actions">
                <a href="/add-movie" class="hero-btn primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Add Movie
                </a>
                <a href="#movies" class="hero-btn secondary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polygon points="10 8 16 12 10 16 10 8"></polygon>
                    </svg>
                    Browse Collection
                </a>
            </div>
        </div>
    </section>

    <main class="movie-container" id="movies">
        <div class="section-header">
            <h2>üé¨ Trending Now</h2>
            <div class="section-actions">
                <button class="filter-btn active">All</button>
                <button class="filter-btn">Action</button>
                <button class="filter-btn">Drama</button>
                <button class="filter-btn">Comedy</button>
            </div>
        </div>
        
        <% if (movies.length === 0) { %>
            <div class="no-movie">
                <h3>No movies available</h3>
                <p>Start by adding your first movie to the collection!</p>
                <a href="/add-movie" class="cta-empty-btn">Add Your First Movie</a>
            </div>
        <% } else { %>
            <div class="movie-grid">
                <% movies.forEach(movie => { %>
                    <div class="movie-card-pro" data-movie-id="<%= movie._id %>" data-movie-title="<%= movie.title %>">
                        
                        <div class="card-img">
                            <img src="<%= movie.ProfileImage %>" alt="<%= movie.title %> poster" loading="lazy">
                        </div>

                        <div class="card-content">
                            <div class="card-top">
                                <span class="genre-pill">
                                    <%= movie.genre %>
                                </span>
                                <span class="rating-pill">‚≠ê <%= movie.rating || "N/A" %></span>
                            </div>

                            <h3 class="movie-title">
                                <%= movie.title %>
                            </h3>

                            <p class="movie-year">üéûÔ∏è <%= movie.year %></p>

                            <!-- ACTION BUTTONS -->
                            <div class="card-actions">
                                <a href="/edit-movie/<%= movie._id %>" class="edit-btn" title="Edit Movie">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Edit
                                </a>

                                <button class="delete-btn" title="Delete Movie" onclick="showDeleteModal('<%= movie._id %>', '<%= movie.title %>')">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                        <line x1="10" y1="11" x2="10" y2="17"></line>
                                        <line x1="14" y1="11" x2="14" y2="17"></line>
                                    </svg>
                                    Delete
                                </button>
                            </div>
                        </div>

                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal-overlay">
        <div class="modal-container">
            <div class="modal-header">
                <div class="modal-icon danger">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 6h18"></path>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                </div>
                <h3>Delete Movie</h3>
                <p>Are you sure you want to delete <strong id="movieTitle"></strong>?</p>
            </div>
            
            <div class="modal-body">
                <p>This action cannot be undone. The movie will be permanently removed from your collection.</p>
            </div>
            
            <div class="modal-actions">
                <button class="modal-btn cancel" onclick="closeDeleteModal()">Cancel</button>
                <button class="modal-btn danger" id="confirmDeleteBtn">Delete Movie</button>
            </div>
        </div>
    </div>

    <%- include('footer.ejs') %>

    <script>
        let movieToDelete = null;

        function showDeleteModal(movieId, movieTitle) {
            movieToDelete = movieId;
            document.getElementById('movieTitle').textContent = movieTitle;
            document.getElementById('deleteModal').style.display = 'flex';
            
            // Set up the confirm delete button
            document.getElementById('confirmDeleteBtn').onclick = function() {
                if (movieToDelete) {
                    window.location.href = '/delete-movie/' + movieToDelete;
                }
            };
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
            movieToDelete = null;
        }

        // Close modal when clicking outside
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>

    <style>
        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            z-index: 10000;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .modal-container {
            background: linear-gradient(135deg, rgba(26, 26, 26, 0.98) 0%, rgba(20, 20, 20, 0.98) 100%);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 0;
            width: 100%;
            max-width: 500px;
            box-shadow: 
                0 20px 60px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.05);
            overflow: hidden;
            animation: modalSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(20px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .modal-header {
            padding: 30px 30px 20px;
            text-align: center;
            background: linear-gradient(135deg, rgba(229, 9, 20, 0.05) 0%, transparent 100%);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .modal-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .modal-icon.danger {
            background: linear-gradient(135deg, #e50914 0%, #f40612 100%);
            box-shadow: 0 10px 30px rgba(229, 9, 20, 0.3);
        }

        .modal-icon svg {
            color: #ffffff;
        }

        .modal-header h3 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modal-header p {
            font-size: 1rem;
            color: #b3b3b3;
            margin: 0;
        }

        .modal-header strong {
            color: #ffffff;
            font-weight: 600;
        }

        .modal-body {
            padding: 20px 30px;
        }

        .modal-body p {
            font-size: 0.9rem;
            color: #999;
            line-height: 1.6;
            margin: 0;
        }

        .modal-actions {
            display: flex;
            gap: 16px;
            padding: 20px 30px 30px;
            justify-content: flex-end;
        }

        .modal-btn {
            padding: 12px 24px;
            border: none;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }

        .modal-btn.cancel {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .modal-btn.cancel:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .modal-btn.danger {
            background: linear-gradient(135deg, #e50914 0%, #f40612 100%);
            color: #ffffff;
            box-shadow: 0 8px 25px rgba(229, 9, 20, 0.3);
        }

        .modal-btn.danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(229, 9, 20, 0.4);
        }

        /* Empty state CTA button */
        .cta-empty-btn {
            display: inline-block;
            background: linear-gradient(135deg, #e50914 0%, #f40612 100%);
            color: #ffffff;
            padding: 14px 28px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            margin-top: 20px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .cta-empty-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(229, 9, 20, 0.3);
        }

        /* Responsive Modal */
        @media (max-width: 480px) {
            .modal-overlay {
                padding: 10px;
            }
            
            .modal-container {
                border-radius: 16px;
            }
            
            .modal-header {
                padding: 20px 20px 15px;
            }
            
            .modal-header h3 {
                font-size: 1.2rem;
            }
            
            .modal-body {
                padding: 15px 20px;
            }
            
            .modal-actions {
                padding: 15px 20px 20px;
                flex-direction: column;
            }
            
            .modal-btn {
                width: 100%;
            }
        }
    </style>
</body>

</html>