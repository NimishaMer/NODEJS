<%- include('../header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">View Category</h4>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th style="width: 160px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories && categories.length) { %>
                                <% categories.forEach((c) => { %>
                                    <tr>
                                        <td><%= c.name %></td>
                                        <td><%= c.status %></td>
                                        <td>
                                            <a href="/category/edit-category/<%= c._id %>" class="btn btn-sm btn-info">Edit</a>
                                            <a href="/category/delete-category/<%= c._id %>" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
