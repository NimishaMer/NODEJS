<%- include("./header") %>

<!-- Contact Section -->
<div style="text-align: center; padding: 80px 20px; border-bottom: 1px solid #eee;">
    <h1 style="font-size: 42px; font-weight: 300; color: #111; margin-bottom: 20px; letter-spacing: -1px;">Contact Us</h1>
    <p style="font-size: 18px; color: #666; max-width: 500px; margin: 0 auto; line-height: 1.6;">
        Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
    </p>
</div>

<!-- Contact Info & Form -->
<div style="padding: 80px 20px; max-width: 1000px; margin: 0 auto;">
    <div class="row">
        <!-- Contact Info -->
        <div class="col-md-5" style="margin-bottom: 40px;">
            <h2 style="font-size: 24px; font-weight: 300; color: #111; margin-bottom: 30px;">Get in Touch</h2>
            
            <div style="margin-bottom: 25px;">
                <p style="color: #999; font-size: 13px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Email</p>
                <p style="color: #111; font-size: 16px;">hello@merfashion.com</p>
            </div>
            
            <div style="margin-bottom: 25px;">
                <p style="color: #999; font-size: 13px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Phone</p>
                <p style="color: #111; font-size: 16px;">+91 98765 43210</p>
            </div>
            
            <div style="margin-bottom: 25px;">
                <p style="color: #999; font-size: 13px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Address</p>
                <p style="color: #111; font-size: 16px;">123 Fashion Street<br>Mumbai, India</p>
            </div>
            
            <div>
                <p style="color: #999; font-size: 13px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Hours</p>
                <p style="color: #111; font-size: 16px;">Mon - Sat: 10AM - 8PM</p>
            </div>
        </div>
        
        <!-- Contact Form -->
        <div class="col-md-7">
            <div style="background: #fafafa; padding: 40px;">
                <h2 style="font-size: 24px; font-weight: 300; color: #111; margin-bottom: 30px;">Send Message</h2>
                <form>
                    <div class="row">
                        <div class="col-md-6" style="margin-bottom: 20px;">
                            <input type="text" placeholder="Your Name" style="width: 100%; padding: 15px; border: none; border-bottom: 1px solid #ddd; background: transparent; font-size: 15px; outline: none;">
                        </div>
                        <div class="col-md-6" style="margin-bottom: 20px;">
                            <input type="email" placeholder="Your Email" style="width: 100%; padding: 15px; border: none; border-bottom: 1px solid #ddd; background: transparent; font-size: 15px; outline: none;">
                        </div>
                    </div>
                    <div style="margin-bottom: 20px;">
                        <input type="text" placeholder="Subject" style="width: 100%; padding: 15px; border: none; border-bottom: 1px solid #ddd; background: transparent; font-size: 15px; outline: none;">
                    </div>
                    <div style="margin-bottom: 30px;">
                        <textarea rows="4" placeholder="Your Message" style="width: 100%; padding: 15px; border: none; border-bottom: 1px solid #ddd; background: transparent; font-size: 15px; outline: none; resize: none;"></textarea>
                    </div>
                    <button type="button" style="padding: 15px 40px; border: 1px solid #111; background: #111; color: #fff; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; cursor: pointer;">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("./footer") %>
