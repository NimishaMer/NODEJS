<%- include('../header') %>

<style>
    body {
        background: #eef1f5;
        font-family: Inter, Arial, sans-serif;
    }

    .blog-wrapper {
        max-width: 800px;
        margin: 40px auto;
        background: #ffffff;
        border-radius: 14px;
        padding: 34px;
        box-shadow: 0 18px 45px rgba(0,0,0,0.12);
    }

    /* MAIN LAYOUT */
    .blog-layout {
        display: grid;
        grid-template-columns: 380px 1fr;
        gap: 34px;
        align-items: flex-start;
    }

    /* LEFT IMAGE */
    .blog-image {
        border-radius: 12px;
        padding: 14px;
        background: #f8fafc;
        border: 1px solid #e5e7eb;
    }

    .blog-image img {
        width: 100%;
        max-height: 280px;
        object-fit: contain;
        border-radius: 10px;
        background: #ffffff;
    }

    /* RIGHT CONTENT */
    .blog-content {
        display: flex;
        flex-direction: column;
    }

    .blog-title {
        font-size: 30px;
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 14px;
        line-height: 1.3;
    }

    /* META */
    .blog-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 12px;
        margin-bottom: 22px;
    }

    .blog-meta div {
        display: flex;
        justify-content: space-between;
        background: #f1f5f9;
        padding: 10px 14px;
        border-radius: 8px;
        font-size: 14px;
        color: #334155;
    }

    .blog-meta strong {
        color: #0f172a;
        font-weight: 600;
    }

    /* DESCRIPTION */
    .blog-description {
        font-size: 16.5px;
        line-height: 2;
        color: #334155;
        white-space: pre-line;
        padding-top: 10px;
        margin-bottom: 32px;
    }

    /* ACTIONS */
    .blog-actions {
        display: flex;
        gap: 14px;
        border-top: 1px solid #e5e7eb;
        padding-top: 18px;
        margin-top: auto;
    }

    .btn {
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        font-size: 14px;
        transition: 0.25s ease;
    }

    .btn-back {
        background: #2563eb;
        color: #ffffff;
    }

    .btn-edit {
        background: #059669;
        color: #ffffff;
    }

    .btn:hover {
        transform: translateY(-2px);
        opacity: 0.95;
    }

    /* RESPONSIVE */
    @media (max-width: 900px) {
        .blog-layout {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="blog-wrapper">

    <div class="blog-layout">

        <!-- LEFT IMAGE -->
        <div class="blog-image">
            <img src="<%= blogs.image %>" alt="Blog Image">
        </div>

        <!-- RIGHT CONTENT -->
        <div class="blog-content">

            <div class="blog-title">
                <%= blogs.title %>
            </div>

            <div class="blog-meta">
                <div><strong>Author</strong><span><%= blogs.author %></span></div>
                <div><strong>Category</strong><span><%= blogs.category %></span></div>
                <div><strong>Date</strong><span><%= blogs.publishDate %></span></div>
                <% if (blogs.tags) { %>
                <div><strong>Tags</strong><span><%= blogs.tags %></span></div>
                <% } %>
            </div>

            <div class="blog-description">
                <%= blogs.description %>
            </div>

            <div class="blog-actions">
                <a href="/blog/view-blogs" class="btn btn-back">‚Üê Back</a>
                <a href="/blog/edit-blog/<%= blogs._id %>" class="btn btn-edit">Edit</a>
            </div>

        </div>

    </div>

</div>

<%- include('../footer') %>
